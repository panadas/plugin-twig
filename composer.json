{
    "name": "panadas/plugin-twig",
    "description": "Adds support for Twig to your application.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Adam Pancutt",
            "email": "adam@panadas.co.uk"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "panadas/framework": "~1.0",
        "panadas/data-structure": "~1.0",
        "twig/twig": "~1.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "~0.0",
        "phpunit/phpunit": "~3.7.0",
        "panadas/phpcs-standard": "~1.0"
    },
    "autoload": {
        "psr-4" : {
            "Panadas\\TwigPlugin\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
